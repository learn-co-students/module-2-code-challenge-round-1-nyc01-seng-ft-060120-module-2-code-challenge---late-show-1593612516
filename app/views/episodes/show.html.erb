<h1>Episode <%= @episode.number %></h1>
<h2>Date: <%= "#{@episode.date.strftime("%B %d, %Y")}" %></h2>

<%if @episode.guests != []%>
    <h3>Guests:</h3>
    <ul>
        <% @episode.guests.each do |guest| %>
            <li>
                <%= link_to guest.name, guest_path(guest) %>
            </li>
        <%end%>
    </ul>
<%end%>

<%if @episode.average_rating%>
    <h4>Average Rating of Appearances:</h4>
    <p><%= @episode.average_rating %></p>
<%end%>
