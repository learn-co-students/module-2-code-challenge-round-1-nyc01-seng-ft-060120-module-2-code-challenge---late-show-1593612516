<h1>New Appearance Form</h1>
<% if flash[:errors]%>
    <% flash[:errors].each do |e| %>
        <p><%= e %></p>
    <% end %>
<% end %><br>

<%= form_for @appearance do |f| %>
    <%= f.label "Guest" %><br>
    <%= f.collection_select :guest_id, Guest.all, :id, :name %><br><br>

    <%= f.label "Episode" %><br>
    <%= f.collection_select :episode_id, Episode.all, :id, :number %><br><br>

    <%= f.label :rating %><br>
    <%= f.number_field :rating %><br><br>

    <%= f.submit %>
<% end %>