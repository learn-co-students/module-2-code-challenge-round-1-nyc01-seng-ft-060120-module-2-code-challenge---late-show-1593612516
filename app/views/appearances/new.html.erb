<h1>New Appearance Form</h1>

<% if flash[:my_error]%>
<% flash[:my_error].each do |error|%>
    <p><%= error%>
<%end%>
<%end%>

<%= form_for @appearance do |f|%>
    <%= f.label :guest_id%>
    <%= f.collection_select :guest_id, @guests, :id, :name%>

    <%= f.label :episode_id%>
    <%= f.collection_select :episode_id, @episodes, :id, :number%>

    <%= f.label :rating%>
    <%= f.number_field :rating%>

    <%= f.submit%>

<%end%> 