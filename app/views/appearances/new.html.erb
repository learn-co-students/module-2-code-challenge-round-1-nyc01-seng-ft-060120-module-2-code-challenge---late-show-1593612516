<h1>New Appearance Form</h1>
<%= form_for @appearance do |f| %>
    <%= f.label :guest_id %>
    <%= f.collection_select :guest_id, @guests, :id, :name %>
    <%= f.label :episode_id %>
    <%= f.collection_select :episode_id, @episodes, :id, :number %> </br></br>
    <%= f.label :rating %>
    <%= f.number_field :rating, max: 5, min:1 %>
    <%= f.submit %>
<% end %>

<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
        <%= e %></br>
    <% end %>
<% end %>