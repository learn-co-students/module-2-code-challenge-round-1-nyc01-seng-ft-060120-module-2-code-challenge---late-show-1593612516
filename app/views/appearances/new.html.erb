<% if flash[:error_list]%>
    <% flash[:error_list].each do |error|%>
    <%= error%>
<%end%>
<%end%>


<h1>Create a New Appearance Form</h1>

<%= form_for @appearance do |f| %>

<%= f.label :episode_id%>
<%= f.collection_select :episode_id, @episodes, :id, :number%>

<%= f.label :guest_id%>
<%= f.collection_select :guest_id, @guests, :id, :name%>

<%= f.label :rating%>
<%= f.number_field :rating%>

<%= f.submit%>
<%end%>